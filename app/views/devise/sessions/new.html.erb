<br><br><br>
<div class="container">
  <div class="col-xs-12">
    <div class="row">
      <div class="col-sm-4" style="background-color: lightblue; font-family: Verdana; border-radius: 25px;">
        <br>
        <center><h4>LOGIN</h4>
        with<br><br>
        <a href="/users/auth/facebook"><img src="/assets/facebook.jpg", width =  "40px" height= "35px", alt="No-image"></a>
        <a href="/users/auth/github"><img src="/assets/github.png", width =  "62px" height= "50px", alt="No-image"></a>
        <a href="/users/auth/google_oauth2"><img src="/assets/google1.png", width ="40px" height="35px" alt="No-image"></a>
        <br><br>
        OR
        <br>
        </center>

        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-group">
            <%= f.email_field :email, autofocus: true, id: "email" ,autocomplete: "email", class: "form-control", placeholder: "Enter Email" %>
          </div>
          <div class="form-group">
            <%= f.password_field :password, id: "password" , autocomplete: "current-password", class: "form-control", placeholder: "Enter Password" %>
          </div>
          
          <% if devise_mapping.rememberable? -%>
            <div class="form-group">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
              <br>
              <%= render "devise/shared/links" %>

            </div>
          <% end%>
          <div class="actions">
            <center><%= f.submit "Log in", class: "btn btn-primary" %></center>
          </div>
        <% end %>
      </div>

      <div class="col-sm-4"></div>
      <div class="col-sm-4" style="background-color: lightblue; font-family: Verdana; border-radius: 25px;">
        <br>
        <center>
          <h4>SIGNUP</h4>
          with<br><br>

          <a href="/users/auth/facebook"><img src="/assets/facebook.jpg", width =  "40px" height= "35px", alt="No-image"></a>
          <a href="/users/auth/github"><img src="/assets/github.png", width =  "62px" height= "50px", alt="No-image"></a> 
          <a href="/users/auth/google_oauth2"><img src="/assets/google1.png", width ="40px" height="35px" alt="No-image"></a>
          <br><br>OR<br></center>
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
              <%= devise_error_messages! %>

              <div class="field">
                <%#= f.label :name, "Name : " %>
                <%= f.text_field :name, autofocus: true, autocomplete: "Name", class: "form-control", placeholder: "Enter Name "  %>
              </div>
              <br>
              <div class="field">
                <%#= f.label :email , "Email : "%>
                <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Enter Email " %>
              </div>
              <br>
              <div class="field">
                <%#= f.label :password , "Password : "%>
                <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> characters minimum)</em>
                <% end %>
                <%= f.password_field :password, autocomplete: "new-password" , class: "form-control", placeholder: "Enter Password" %>
              </div>
              <br>
              <div class="field">
                <%#= f.label :password_confirmation, "Confirm Password :" %>
                <%= f.password_field :password_confirmation, autocomplete: "new-password" , class: "form-control", placeholder: "Confirm Password"%>
              </div>
              <br>
              <div class="actions">
                <center><%= f.submit "Sign up" , class: "btn btn-primary"%></center><br>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
<br><br>


<%#= render "devise/shared/links" %>
